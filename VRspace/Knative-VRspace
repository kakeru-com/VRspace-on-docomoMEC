apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: ubuntu-desktop-vnc
  name: ubuntu-desktop-vnc-deployment-tamati
spec:
  replicas: 1
  selector:
    matchLabels:
      app: ubuntu-desktop-vnc
  template:
    metadata:
      labels:
        app: ubuntu-desktop-vnc
    spec:
      containers:
      - image: dorowu/ubuntu-desktop-lxde-vnc:latest
        name: ubuntu-desktop-vnc
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: ubuntu-desktop-vnc-service
spec:
  selector:
    app: ubuntu-desktop-vnc
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
    nodePort: 30080  # 任意のNodePort番号を指定
  type: NodePort
